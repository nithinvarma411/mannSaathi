{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node", "fastify", "@fastify/jwt"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
